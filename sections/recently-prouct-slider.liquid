<script src="{{ 'custom-components.js' | asset_url }}" type="module"></script>

<section>
  <div class="recently-view">
    <div class="clearfix"></div>
      <div class="">
            <div id="recently-viewed-products" class="collection clearfix " >
              <header class="section-header">
                <h2 class="section-header__title border-bottom">{{ section.settings.title_text }}</h2>
                <p>{{ section.settings.description_text }}</p>         
              </header>  
            </div>
      </div>
      {% raw %}
      <div class="swiper mySwiper">
        <div class="swiper-wrapper">
          <script id="recently-viewed-product-template"  type="text/x-jquery-tmpl">
            <div class="swiper-slide">
                <div id="product-${handle}">
                  <a href="${url}">
                    <img src="${Shopify.Products.resizeImage(featured_image, "medium")}" />
                    <span class="title">${title}</span>
                    <span>â‚¬ ${price /100}</span>
                  </a>
                </div>
            </div>
          </script>
        </div>
      </div>
      {% endraw %}
  </div>
  <swiper-code howmany="{{ section.settings.howmany_show }}"></swiper-code>


  <script>
    Shopify.Products.showRecentlyViewed( { howManyToShow:{{ section.settings.howmany_show }} } );
  </script>

